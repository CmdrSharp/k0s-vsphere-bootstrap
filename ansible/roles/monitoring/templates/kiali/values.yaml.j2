---

cr:
  create: true
  name: kiali
  namespace: istio-system

  spec:
    deployment:
      accessible_namespaces:
      - '**'

    auth:
      strategy: {{ monitoring.kiali.auth.strategy }}

    external_services:
      grafana:
        auth:
          type: none
          insecure_skip_verify: true
        in_cluster_url: 'http://kube-prometheus-stack-grafana.monitoring'
        url: 'http://kube-prometheus-stack-grafana.monitoring'
      prometheus:
        url: 'http://kube-prometheus-stack-prometheus.monitoring:9090'
      istio:
        component_status:
          components:
          - app_label: "istiod"
            is_core: true
            is_proxy: false
          - app_label: "istio-internal-ingress"
            is_core: true
            is_proxy: true
            namespace: istio-ingress
          - app_label: "istio-external-ingress"
            is_core: true
            is_proxy: true
            namespace: istio-ingress
      tracing:
        enabled: false